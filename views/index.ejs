<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <%- include('partials/styles.ejs') %>
</head>
<body>
  <div class="container">
    <h1>Sightings</h1>
    <hr />
    <!-- if favourite is a value, and not false, render this: -->
    <% if (favourite) { %>
      <br />
      <!-- favourite is a number referring to the index -->
      <h3> Favourite Sighting: <a href="/sighting/<%= favourite %>"> <%= favourite %>: <%= sightings[favourite].city, sightings[favourite].state %> </a></h3>
      <p> <%= sightings[favourite].date_time %> </p>
      <p> <%= sightings[favourite].summary %> </p>
      <br />
      <hr />
      <br />
    <% } %>
    <% sightings.forEach((sight, index) => { %>
      <br />
      <h3> <a href="/sighting/<%= index %>"> <%= index %>: <%= sight.city, sight.state %> </a></h3>
      <p> <%= sight.date_time %> </p>
      <p> <%= sight.summary %> </p>
      <br />
      <hr />
    <% }) %> 
  </div>

  <%- include('partials/scripts.ejs') %>
</body>
</html>