<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <%- include('partials/styles.ejs') %>
</head>
<body>
  <div class="container">
    <h1>Edit Sighting</h1>
    <!-- this URL needs to make use of EJS injections to fill in the URL correctly -->
    <form action="/sighting/<%= sighting.index %>/edit?_method=PUT" method="POST">
      <label for="text">Sighting Information:</label><br />
      <textarea type="text" id="text" name="text"><%= sighting.text %></textarea><br />
      <label for="date_time">Date and Time:</label><br />
      <input
        type="text"
        id="date_time"
        name="date_time"
        value="<%= sighting.date_time %>"
      /><br />
      <label for="city">City:</label><br />
      <input type="text" id="city" name="city" value="<%= sighting.city %>" /><br />
      <label for="state">State:</label><br />
      <input type="text" id="state" name="state" value="<%= sighting.state %>" /><br />
      <label for="shape">Shape:</label><br />
      <input type="text" id="shape" name="shape" value="<%= sighting.shape %>" /><br />
      <label for="duration">Duration:</label><br />
      <input type="text" id="duration" name="duration" value="<%= sighting.duration %>" /><br />
      <label for="summary">Summary:</label><br />
      <input type="text" id="summary" name="summary" value="<%= sighting.summary %>" /><br />
      <input type="submit" value="Submit" />
    </form>
  </div>

  <%- include('partials/scripts.ejs') %>
</body>
</html>